class SearchAlgorithms {
    // Iterative Binary Search
    static int binarySearchIter(int arr[], int key) {
        int l = 0, r = arr.length - 1;
        while (l <= r) {
            int mid = (l + r) / 2;
            if (arr[mid] == key) return mid;
            else if (arr[mid] < key) l = mid + 1;
            else r = mid - 1;
        }
        return -1;
    }
    // Recursive Binary Search
    static int binarySearchRec(int arr[], int l, int r, int key) {
        if (l > r) return -1;
        int mid = (l + r) / 2;
        if (arr[mid] == key) return mid;
        else if (arr[mid] < key) return binarySearchRec(arr, mid + 1, r, key);
        else return binarySearchRec(arr, l, mid - 1, key);
    }

    // Recursive Linear Search
    static int linearSearchRec(int arr[], int index, int key) {
        if (index >= arr.length) return -1;
        if (arr[index] == key) return index;
        return linearSearchRec(arr, index + 1, key);
    }

    // Find min recursively
    static int findMinRec(int arr[], int n) {
        if (n == 1) return arr[0];
        return Math.min(arr[n - 1], findMinRec(arr, n - 1));
    }

    // Find max recursively
    static int findMaxRec(int arr[], int n) {
        if (n == 1) return arr[0];
        return Math.max(arr[n - 1], findMaxRec(arr, n - 1));
    }

    public static void main(String[] args) {
        int[] numbers = {3, 8, 12, 20, 25, 30};

        System.out.println("Iterative Binary Search for 20: " + binarySearchIter(numbers, 20));
        System.out.println("Recursive Binary Search for 25: " + binarySearchRec(numbers, 0, numbers.length - 1, 25));
        System.out.println("Recursive Linear Search for 12: " + linearSearchRec(numbers, 0, 12));

        System.out.println("Minimum value: " + findMinRec(numbers, numbers.length));
        System.out.println("Maximum value: " + findMaxRec(numbers, numbers.length));
    }
}
